# Universal Decay Law - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For PostgreSQL:
# DB_DRIVER=postgresql+asyncpg
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=universal_decay_law
# DB_USER=your_user
# DB_PASSWORD=your_password

# For SQLite (default - no config needed):
# DB_DRIVER=sqlite+aiosqlite
# DB_SQLITE_PATH=./database/decay_law.db

# =============================================================================
# API CREDENTIALS FOR DATA COLLECTION
# =============================================================================

# Reddit API (https://www.reddit.com/prefs/apps)
# Create a "script" application to get these credentials
API_REDDIT_CLIENT_ID=your_reddit_client_id
API_REDDIT_CLIENT_SECRET=your_reddit_client_secret
API_REDDIT_USER_AGENT=UniversalDecayLaw/1.0

# GitHub API (https://github.com/settings/tokens)
# Create a personal access token with "repo" and "user" scopes
API_GITHUB_TOKEN=ghp_your_github_token_here

# Strava API (https://www.strava.com/settings/api)
# Create an application to get OAuth2 credentials
API_STRAVA_CLIENT_ID=your_strava_client_id
API_STRAVA_CLIENT_SECRET=your_strava_client_secret

# Last.fm API (https://www.last.fm/api/account/create)
API_LASTFM_API_KEY=your_lastfm_api_key
API_LASTFM_SHARED_SECRET=your_lastfm_shared_secret

# =============================================================================
# ANALYSIS SETTINGS
# =============================================================================
ANALYSIS_MAX_OBSERVATION_DAYS=365
ANALYSIS_MIN_ACTIVITY_THRESHOLD=5
ANALYSIS_DEFAULT_DECAY_MODEL=stretched_exponential
ANALYSIS_MCMC_SAMPLES=5000
ANALYSIS_MCMC_CHAINS=4

# =============================================================================
# SERVER SETTINGS
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_DEBUG=false
SERVER_WORKERS=4
SERVER_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# SECURITY
# =============================================================================
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-secure-random-key

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
